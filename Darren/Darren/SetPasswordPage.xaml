<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Darren.SetPasswordPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Margin="10" Padding="10" Spacing="15">
            <Image Source="Benz.png" Aspect="AspectFit" HeightRequest="100">

            </Image>

            <Entry Keyboard="Numeric" Placeholder="Enter New Password" IsPassword="True" TextColor="Black" PlaceholderColor="Gray" ClearButtonVisibility="WhileEditing" BackgroundColor="White" MaxLength="30"></Entry>

            <Entry Keyboard="Numeric" Placeholder="Confirm Password" IsPassword="True" TextColor="Black" PlaceholderColor="Gray" ClearButtonVisibility="WhileEditing" BackgroundColor="White" MaxLength="30"></Entry>

            <Button Text="SUBMIT" CornerRadius="20" TextColor="White" BackgroundColor="ForestGreen" FontAttributes="Bold" FontSize="15" Clicked="Button_Clicked"></Button>

            <Button Text="GO BACK" BackgroundColor="Black" HorizontalOptions="CenterAndExpand" CornerRadius="20" TextColor="White" Clicked="Button_Clicked_1" FontAttributes="Bold" FontSize="15"></Button>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>