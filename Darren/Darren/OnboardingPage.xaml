<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Darren.OnboardingPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Margin="10" Padding="10" Spacing="15">
            <Image Source="Benz.png" Aspect="AspectFit" HeightRequest="100">

            </Image>
            <Label TextColor="Black" Text="Welcome To Mercedes-Benz" FontSize="35" FontAttributes="Bold"  VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Center"></Label>
           

            <Button Text="Get Started" CornerRadius="20" TextColor="White" BackgroundColor="ForestGreen" HorizontalOptions="FillAndExpand" FontAttributes="Bold" FontSize="15" Clicked="Button_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>